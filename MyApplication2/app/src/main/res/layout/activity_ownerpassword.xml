<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ahnaf.myapplication2.ownerpassword">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERATOR"
        android:id="@+id/generator"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
         />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIFT"
        android:textSize="20dp"
        android:id="@+id/lift"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RENT"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="155dp"
        android:id="@+id/textView2" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_toRightOf="@+id/lift"
        android:layout_toEndOf="@+id/lift" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="220dp"
        android:id="@+id/ownerpass"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ownerpass"
        android:layout_toEndOf="@+id/ownerpass" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTE: Password must contain at least 8 character"
        android:layout_marginTop="255dp"
        android:textSize="15dp"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM\nPASSWORD"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ownerpass"
        android:layout_toEndOf="@+id/ownerpass"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="350dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />
</RelativeLayout>
